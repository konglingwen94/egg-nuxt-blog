{
  "name": "egg-nuxt-blog",
  "version": "1.0.0",
  "description": "Nuxt.js（web端） + Egg.js（api 服务） + Vue.js（管理后台）+ ElementUI（通用组件库）服务器渲染(SSR)搭建的个人博客系统",
  "main": "app.js",
  "scripts": {
    "start": "egg-scripts start --daemon --title=egg-server-myblog --stdout=./logs/master-stdout.log --stderr=./logs/master-stderr.log",
    "stop": "egg-scripts stop",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "admin:dev": "cd admin && npm run dev",
    "admin:build": "cd admin && npm run build",
    "web:dev": "cd web && npm run dev",
    "web:debug": "cd web && npm run debug",
    "web:build": "cd web && npm run build",
    "web:build:generate": "cd web && npm run generate",
    "web:start": "cd web && npm run start",
    "web:dev:spa": "cd web && npm run dev:spa",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konglingwen94/egg-nuxt-blog.git"
  },
  "keywords": [
    "blog",
    "egg-nuxt-blog",
    "nuxt-blog",
    "egg-blog",
    "nodejs",
    "koa2",
    "mongodb",
    "mongoose",
    "vuejs",
    "JavaScript",
    "博客网站",
    "Node.js实战",
    "Nuxt 服务端渲染"
  ],
  "author": "KongLingWen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/konglingwen94/egg-nuxt-blog/issues"
  },
  "homepage": "https://github.com/konglingwen94/egg-nuxt-blog#readme",
  "dependencies": {
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "egg": "^2.26.0",
    "egg-cors": "^2.2.0",
    "egg-mongoose": "^3.2.0",
    "egg-router-plus": "^1.3.1",
    "egg-scripts": "^2.11.0",
    "egg-validate": "^2.0.2",
    "element-ui": "^2.13.0",
    "gravatar": "^1.8.0",
    "inflected": "^2.0.4",
    "jsonwebtoken": "^8.5.1",
    "koa-compress": "^3.0.0",
    "koa-multer": "^1.0.2",
    "koa2-connect-history-api-fallback": "^0.1.2",
    "message-tree": "^0.1.6",
    "mongoose": "^5.7.1",
    "normalize.css": "^8.0.1",
    "nuxt": "^2.11.0",
    "pell": "^1.0.6",
    "vue-weather-component": "^1.0.0"
  },
  "devDependencies": {
    "@nuxtjs/proxy": "^1.3.3",
    "@nuxtjs/style-resources": "^1.0.0",
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "babel-plugin-component": "^1.1.1",
    "cross-env": "^5.2.0",
    "egg-bin": "^4.13.0",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "vuepress": "^1.2.0"
  }
}
